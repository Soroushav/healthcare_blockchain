{
  "compilerOptions": {
    // Environment
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    // Node compatibility
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Output options
    "sourceMap": true,
    "declaration": false,

    // Type checking
    "strict": true,
    
    // IMPORTANT: These must be disabled for ts-node + CommonJS
    "verbatimModuleSyntax": false,
    "isolatedModules": false,

    // Misc
    "skipLibCheck": true
  },
  "include": ["src/**/*", "testFabric.ts"]
}